<p id="notice"><%= notice %></p>

<h1 class="text-center" >Морские туры</h1>

<% @sea_tours.each do |sea_tour| %>
  <div>
    <div class="text-center">
      <h3><%= link_to sea_tour.title, sea_tour_path(sea_tour) %></h3>
      <p>
        <%= sea_tour.short_content %>
      </p>
    </div>
    <div class="row">
      <div class="col-4">
        <p id="adult_price_<%= sea_tour.id %>">
          <%= image_tag("adult.png", style: "width: 25px;") %> ->
          <%= sea_tour.adult_price %>
        </p>
        <p id="child_price_<%= sea_tour.id %>">
          <%= image_tag("child.png", style: "width: 25px;") %> ->
          <%= sea_tour.child_price %>
        </p>
      </div>
      <div class="col-8 text-center">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary btn-lg" id="order_tour_button" data-toggle="modal" data-target="#exampleModal_<%= sea_tour.id %>">
          Заказать
        </button>
        <!-- Modal -->
        <div class="modal fade" id="exampleModal_<%= sea_tour.id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                  <%= "Заказать #{sea_tour.title}" %>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form>
                  <div class="form-group row">
                    <label for="program_title" class="col-sm-2 col-form-label">Program:</label>
                    <div class="col-sm-10">
                      <input type="text" readonly class="form-control-plaintext" id="program_title_<%= sea_tour.id%>" value="<%= sea_tour.title %>">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="date" class="col-sm-2 col-form-label">Date:</label>
                    <div class="col-sm-10">
                      <input type="date" class="form-control-plaintext" id="program_date_<%= sea_tour.id%>" >
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="name" class="col-sm-2 col-form-label">Name:</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control-plaintext" id="name_<%= sea_tour.id%>" >
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="phone" class="col-sm-2 col-form-label">Phone:</label>
                    <div class="col-sm-10">
                      <input type="tel" class="form-control-plaintext" id="phone_<%= sea_tour.id%>" >
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="hotel" class="col-sm-2 col-form-label">Hotel:</label>
                    <div class="col-sm-10">
                      <input type="text" class="form-control-plaintext" id="hotel_<%= sea_tour.id%>" >
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="room" class="col-sm-2 col-form-label">Romm:</label>
                    <div class="col-sm-10">
                      <input type="number" class="form-control-plaintext" id="room_<%= sea_tour.id%>" >
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="adult" class="col-sm-2 col-form-label">Adult:</label>
                    <div class="col-sm-10">
                      <input type="number" class="form-control-plaintext" id="adult_<%= sea_tour.id%>" >
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="child" class="col-sm-2 col-form-label">Child:</label>
                    <div class="col-sm-10">
                      <input type="number" class="form-control-plaintext" id="child_<%= sea_tour.id%>" >
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="infant" class="col-sm-2 col-form-label">Infant:</label>
                    <div class="col-sm-10">
                      <input type="number" class="form-control-plaintext" id="infant_<%= sea_tour.id%>" >
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="total_price" class="col-sm-2 col-form-label">Total:</label>
                    <div class="col-sm-8">
                      <input type="text" readonly class="form-control-plaintext" id="total_price_<%= sea_tour.id%>" value="">
                    </div>
                    <button class="btn.btn-primary col-sm-2 calc_price" id="calc_<%= sea_tour.id%>" >Calc</button>
                  </div>
                </form>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                <button type="button" class="btn btn-primary">Отправить заявку и скачать билет</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%= link_to 'Редактировать', edit_sea_tour_path(sea_tour), class: "btn btn-warning" %>
    <%= link_to 'Удалить тур', sea_tour, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
<% end %>

<br>

<%= link_to 'Создать новый тур', new_sea_tour_path, class: "btn btn-primary float-right" %>
