<% if comments %>
  <!-- Start Project -->
  <section id="projects" >
    <div class="container text-center">
      <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
          <div class="section-title-17 text-center">
            <%= image_tag('divider.svg') %>
            <h2>
               Отзывы о данном туре
            </h2>
          </div>
        </div>
      </div>
    </div>

    <% comments.each do |comment| %>

      <div class="container reviews-block ">
        <div class="row">
          <div class="col-1">
            <%= image_tag('down-chevron.svg', class: 'left-arrow') %>
          </div>
          <div class="col-2">
            <div class="mask-container">
              <div class="mask">
                <% if comment.avatar.url(:bottom) %>
                  <%= image_tag comment.avatar.url(:bottom) %>
                <% else %>
                  <%= image_tag('avatar.svg') %>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-8">
            <p><%= comment.comment %></p>
          </div>
          <div class="col-1 text-right">
            <%= image_tag('down-chevron.svg', class: 'right-arrow') %>
          </div>
        </div>
        <% if !comment.images.empty? %>
          <div class="row">
            <div class="col-3"></div>
            <div class="col-9">
              <div class="row">
                <% comment.images.each_with_index do |image, index| %>
                  <% if index < 2 %>
                    <div class="col-4 images-container">
                      <%= image_tag image.url(:main_page), class: "small_images #{index + 1}" %>
                    </div>
                  <% elsif index == 2 && comment.images.count > 3 %>
                    <div class="col-4 images-container">
                      <%= image_tag image.url(:main_page), class: "small_images #{index + 1}" %>
                      <div class="mask">
                        <p>
                          +<%= comment.images.count - 2 %> фото
                        </p>
                      </div>
                    </div>
                  <% elsif index == 2 %>
                    <div class="col-4 images-container">
                      <%= image_tag image.url(:main_page), class: "small_images #{index + 1}" %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

      </div>

    <% end %>

    <div class="text-center all-review-button">
      <button>
        Все отзывы
      </button>
    </div>
  </section>
  <!-- End End Project -->
<% end %>
