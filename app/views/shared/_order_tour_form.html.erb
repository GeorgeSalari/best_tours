<%= form_for @order, :html => {class: 'fix'} do |f| %>
  <%= f.hidden_field :quantity, value: 1 %>
  <%= f.hidden_field :product_type, value: product_type %>
  <%= f.hidden_field :product_id, value: product_id %>
  <div class="row">
    <div class="col-6">
      <div class="form-input">
        <label>Дата тура</label>
        <%= f.date_field :booking_date %>
      </div>
      <div class="pplsCounter adult row">
        <div class="col-5">
          <%= image_tag 'user.svg' %>
          <label>Взрослых</label>
        </div>
        <div class="col-7">
          <%= f.number_field :adult_count, min: 1, id: "adult_count", :required => true %>
        </div>
      </div>
      <div class="pplsCounter row">
        <div class="col-5">
          <%= image_tag 'kids-couple.svg' %>
          <label>Детей</label>
        </div>
        <div class="col-7">
          <%= f.number_field :child_count, id: "child_count" %>
        </div>
      </div>
      <div class="calcTotalPrice">
        <p>Итоговая стоимость: <span id="finalTotalPrice">0 ฿</span></p>
      </div>
    </div>
    <div class="col-6">
      <div class="form-input">
        <label>Ваше имя</label>
        <%= f.text_field :customer_name, :required => true, autocomplete: 'name' %>
      </div>

      <%= f.text_field :customer_phone, placeholder: "Телефон", :required => true, autocomplete: 'tel' %>

      <%= f.email_field :customer_email, placeholder: "E-mail", autocomplete: 'email' %>

      <%= f.text_area :customer_comment, placeholder: "Комментарий", autocomplete: false %>

    </div>
  </div>
  <div class="formButtonsContainer">
    <button type="button" class="btn btn-primary cart">Добавить в корзину</button>
    <%= f.submit "Забронировать сейчас", class: "btn btn-primary book" %>
  </div>
<% end %>
