    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
          <div class="section-title-17 text-center">
            <%= image_tag('divider.svg') %>
            <h2>
               Наши преимущества
            </h2>
          </div>
        </div>
      </div>
      <div class="row align-items-center advantages">
