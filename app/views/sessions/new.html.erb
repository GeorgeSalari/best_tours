<h1>Зайти на сайт:</h1>
<div class="row">
  <%= render 'shared/flash' %>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: admin_path) do |f| %>
      <%= f.label 'Имя:' %>
      <%= f.text_field :name %>

      <%= f.label 'Пароль:' %>
      <%= f.password_field :password %>

      <%= f.submit "Войти", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
