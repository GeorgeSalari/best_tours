<% content_for :style do %>
  <%= stylesheet_link_tag    'sea_tours' %>
<% end %>

<%= render 'shared/navbar' %>
<p id="notice"><%= notice %></p>

<div class="container">

  <h1>
    <%= @evening_show.title %>
  </h1>

  <div class="text-center">
    <% @evening_show.images.each do |image| %>
      <%= image_tag image.url(:bottom), class: 'small_images' %>
    <% end %>
  </div>

  <!-- The Modal Big Images -->
  <div id="imageModal" class="modal">
    <div class="modal-content">
      <span class="close_image">&times;</span>
      <img id="img01">
    </div>
  </div>
  <!-- End Modal -->

  <div class="row price-container">
    <div class="col-4 text-right">
      <p class="adult-price">
        <%= image_tag 'user.svg' %>
        B <%= @evening_show.adult_price %>
      </p>
    </div>
    <div class="col-4 text-center">
      <p class="child-price">
        <%= image_tag 'kids-couple.svg' %>
        B <%= @evening_show.child_price %>
      </p>
    </div>
    <div class="col-4 text-left">
      <button data-toggle="modal" data-target="#orderTour" class="orderTourButtonShow" data-title="<%= @evening_show.title %>" data-adult="<%= @evening_show.adult_price %>" data-productType="EveningShow" data-productId="<%= @evening_show.id %>" data-child="<%= @evening_show.child_price %>">Заказать</button>

      <!-- The Modal Order Tour -->
      <%= render partial: 'shared/order_tour', :locals => { product_type: "EveningShow", product_id: @evening_show.id} %>
      <!-- End Modal Order Tour  -->
    </div>
  </div>
  <div class="short-content">
    <h2>Краткое описание:</h2>
    <p>
      <%= @evening_show.short_content %>
    </p>
  </div>
  <div class="full-content">
    <h2>Полное описание:</h2>
    <p><%= @evening_show.content.html_safe %></p>
  </div>
  <div class="form-container">
    <%= render partial: 'shared/order_tour_form', :locals => { product_type: "EveningShow", product_id: @evening_show.id} %>
  </div>
</div>
<%= render "shared/footer" %>
